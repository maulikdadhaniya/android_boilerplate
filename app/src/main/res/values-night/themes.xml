<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Android_boilerplate" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Make system bars transparent -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Set dark mode system bar appearance -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <!-- Enable edge-to-edge -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <!-- Default background color -->
        <item name="android:windowBackground">@color/window_background_dark</item>
        <!-- Default surface colors -->
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
    </style>
</resources>